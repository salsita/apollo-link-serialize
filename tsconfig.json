{
    "compilerOptions": {
        "declaration": true,
        "module": "es6",
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "skipLibCheck": true,
        "types": ["node", "jest"],
    },        
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**",
        "**/*.test.ts"
    ]
}
